{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es5",
            "es6"
        ],
        "target": "es6",
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "pretty": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
}